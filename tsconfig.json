{
    "compilerOptions": {
        "target": "es5",
        "module": "UMD",
        "lib": ["es5"],
        "strict": true,
        "allowJs": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "rootDir": "src",
        "baseUrl": "src",
        "declaration": true,
       
    },
    "include": ["src/**/*"],
    "exclude": ["dist"]
}
